<body>
  <div class="top-bar">
    <span class="label">Contador de palos</span>
    <span class="label" id="euroDisplayTop">0,07 €</span>
  </div>

  <div class="counter-wrapper">
    <div class="counter-label">Total palos</div>
    <div class="counter-value" id="counter">7</div>
    <div class="euro-value" id="euroDisplayBottom">0,07 €</div>
  </div>

  <div class="buttons">
    <button class="btn" id="plusBtn">+1</button>
    <button class="btn btn-minus" id="minusBtn">-1</button>
  </div>

  <script>
    const STORAGE_KEY = 'contador_palos_rl_v2';
    let count = 0;
    let storageOk = true;

    function loadCount() {
      try {
        const saved = localStorage.getItem(STORAGE_KEY);
        if (saved !== null && !isNaN(parseInt(saved, 10))) {
          count = parseInt(saved, 10);
        } else {
          count = 0;
        }
      } catch (e) {
        storageOk = false;
        count = 0;
      }
      updateDisplay();
    }

    function saveCount() {
      if (!storageOk) return;
      try {
        localStorage.setItem(STORAGE_KEY, String(count));
      } catch (e) {
        storageOk = false;
      }
    }

    function formatEuros(value) {
      const euros = (value * 0.01).toFixed(2);
      return euros.replace('.', ',') + ' €';
    }

    function updateDisplay() {
      const counterEl = document.getElementById('counter');
      const euroTop = document.getElementById('euroDisplayTop');
      const euroBottom = document.getElementById('euroDisplayBottom');

      counterEl.textContent = count;
      const eurosText = formatEuros(count);
      euroTop.textContent = eurosText;
      euroBottom.textContent = eurosText;
    }

    document.getElementById('plusBtn').addEventListener('click', () => {
      count++;
      saveCount();
      updateDisplay();
    });

    document.getElementById('minusBtn').addEventListener('click', () => {
      if (count > 0) {
        count--;
        saveCount();
        updateDisplay();
      }
    });

    loadCount();
  </script>


</body></html>